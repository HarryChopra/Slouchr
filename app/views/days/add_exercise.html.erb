<h2>Add Exercise</h2>

<%= form_for @day, url: create_exercise_path(@day), method: :post do |f| %>
       
        <%= f.select :exercise_ids, options_for_select(Exercise.all.collect { |e| [ e.name, e.id ] }), {}, {:multiple => true, :class => "", :style => "width:450px; height:125px" } %><br><br>

        <%= f.submit%>

    <% end %>
   