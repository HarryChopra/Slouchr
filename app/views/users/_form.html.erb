<%= form_for @user do |f| %>

<%= f.label "Username: " %>
<%= f.text_field :username, placeholder: "Enter your username", required: true  %><br>

<%= f.label "Password: " %>
<%= f.text_field :password, placeholder: "Enter your password", required: true  %><br>

<%= f.label "Name: " %>
<%= f.text_field :name, placeholder: "Enter your full mame", required: true %><br>

<%= f.label "Age: " %>
<%= f.number_field :age, placeholder: "How old are you?", required: true  %><br>

<%= f.label "Height: " %>
<%= f.number_field :height, placeholder: "Height in cms", required: true  %>(cms)<br>

<%= f.label "Weight: " %>
<%= f.number_field :weight, placeholder: "Weight in lbs", required: true  %>(lbs)<br>

<%= f.label "Bio: " %>
<%= f.text_area :bio, required: true %><br>


<%= f.submit %>

<% end %>
<% if @user.id %>
<br>
Do you want to delete this account?
<%= button_to "Delete", destroy_user_path, :method => :delete %>
<% end %>