<%= form_for @exercise do |f| %>

<%= f.label "Name: " %>
<%= f.text_field :name, placeholder: "Name of the activity", required: true %><br>

<%= f.label "Duration: " %>
<%= f.number_field :duration, placeholder: "Minutes", required: true  %><br>

<%= f.label "Start time: " %>
<%= f.datetime_field :start_time, required: true %><br>

<%= f.label "Calories: " %>
<%= f.number_field :calories, placeholder: "Calories Burnt", required: true %><br>


<%= f.submit %>

<% end %>
<% if @exercise.id %>
<br>
Do you want to delete this exercise?
<%= button_to "Delete", destroy_exercise_path, :method => :delete %>
<% end %>